#notifications-wrapper.hide
  .notifications-settings
    .heading
      h1
        i.fa.fa-bell-o
        span=t('settings.notifications.title')
    form.form(action="#{config.subPath}/settings/notifications", method="post", role="form", autosubmit='autosubmit')
      ul.form-messages
      .form-group
        label #{t('settings.notificatinos.get-email-when')}
      .form-group.new-topic.checkbox
        label(for='new-topic') #{t('settings.notifications.new-topic')}
      .form-group.replies.checkbox
        label(for='replies') #{t('settings.notifications.someone-replies-your-comments')}
      - if(user.staff)
        .form-group.new-comment.checkbox
          label(for='new-comment') #{t('settings.notifications.new-comment')}
      .form-group.row.actions
        .col-xs-12.col-md-6.col-md-offset-3
          button.btn.btn-block.btn-labeled.btn-success(tabindex=4)
            span.btn-label.pull-left
              span.glyphicon.glyphicon-save
            span=t('settings.save')      
