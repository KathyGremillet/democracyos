body
  &.signin-page
    header
      &.app-header
        .user-nav
          a[href="/signin"]
            display none
          a[href="/signup"]
            display inline-block

.signin-container
  padding-bottom 100px
#signin-form
  .form-group
    overflow hidden
    .signup
      float right
      color #666
      font-size 12px
      span
        margin-right 5px
        font-weight bold
  .help
    font-size 80%
    text-align center
    margin-bottom 1em
    p
      margin-bottom 0.5em
#auth-facebook-form, #auth-google-form
  .form-messages
    display none
