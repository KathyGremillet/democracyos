.reply-edit
  form.reply-edit-form(method='put', action='#{config.subPath}/api/comment/#{comment.id}/reply/#{reply.id}', autosubmit='autosubmit', autovalidate='autovalidate')
    .form-group
      textarea.form-control.editable.comment-text.f-text-reply-edit(name='text', rows='4', tabindex='1')= reply.text
    .form-group.clearfix
      input.btn.form-submit.pull-right(type='submit', value=t('common.edit'), tabindex='2')
      input.btn.btn-cancel.pull-right(type='button', value=t('common.cancel'), tabindex='3')
      span.help-text.form-messages
