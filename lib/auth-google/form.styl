.auth-google-form-page
  header
    &.app-header
      .user-nav
        a[href="/signin"]
          display none
        a[href="/signup"]
          display none

.btn-google
  border none
  color #fff
  background #EF5350

  &:hover
    color #f7f7f7
    background-color darken(#EF5350, 40%)

  &:active
    color #f7f7f7
    box-shadow inset 0 0 8px rgba(#082665, .6)

.google-auth-form
  text-align center

  .title-page i
    color #EF5350

  p
    font-size 80%
    margin-bottom 7px
