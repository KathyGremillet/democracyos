.content#forum-delete-modal
  form(method='delete', autovalidate)
    a(href='#').close.cancel
      | &times;
    p.lead= t('settings-forums.delete.confirmation.title')
    p.text-danger!=t('settings-forums.delete.confirmation.body')
    .well
      p!=t('settings-forums.delete.confirmation.instructions', { domain: forum.name })
      .form-group
        input.forum-name.form-control(type='text', name='forum', validate='equals:'+forum.name)
    .form-messages.hide
    .confirmation-actions
      button.btn.btn-block.btn-danger.ok.main(disabled=true)=t('settings-forums.delete.confirmation.button-confirm')
