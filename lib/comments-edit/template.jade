.comment-edit
  form.comment-edit-form(method='put', action='#{config.subPath}/api/comment/#{comment.id}', autosubmit='autosubmit', autovalidate='autovalidate')
    .form-group
      textarea.form-control.editable.comment-text#f-text-edit(name='text', rows='6', tabindex='1')= comment.text
    .form-group.clearfix
      input.btn.form-submit.pull-right(type='submit', value=t('common.edit'), tabindex='2')
      input.btn.btn-cancel.pull-right(type='button', value=t('common.cancel'), tabindex='3')
      span.help-text.form-messages
