.auth-facebook-form-page
  header
    &.app-header
      .user-nav
        a[href="/signin"]
          display none
        a[href="/signup"]
          display none

.btn-facebook
  border none
  color #fff
  background #3b5998

  &:hover
    color #f7f7f7
    background-color darken(#3b5998, 40%)

  &:active
    opacity 1
    color #f7f7f7
    box-shadow inset 0 0 8px rgba(#082665, .6)

.facebook-auth-form
  text-align center

  p
    margin-bottom 7px

  a
    display inline-block
    border-bottom-width 1px
    border-bottom-style solid
    border-bottom-color transparent
    font-weight normal
    font-size 12px
    line-height 1

    &:hover
      border-bottom-color #66adea
      text-decoration none
