#whitelist-wrapper
  .whitelist-admin
    form.form(action=(config.subPath+form.action), method="post", role="form", autocomplete="off", autovalidate='autovalidate', autosubmit='autosubmit')
      ul.form-messages
      .form-group
        label=t('admin-whitelist.type')
        select.form-control(name='type', validate='required')
          - each type in [ 'email' ]
            option(selected=(whitelist.type == type) value=type)=type
      .form-group
        label=t('admin-whitelist.value')
        - if (whitelist.id)
          input.form-control(type='text', name='value', value=whitelist.value, validate='required email')
        - else
          textarea.form-control(type='text', name='value', validate='required emails' placeholder=t('admin-whitelists-form.value.placeholder'))
      .form-group
        button.btn.btn-success.btn-labeled.save
          span.btn-label
            i.fa.fa-floppy-o
          span= t('admin-whitelists-form.button.submit')
        - if (whitelist.id)
          a.btn.btn-danger.btn-labeled.btn-delete(href='#')
            span.btn-label
              i.fa.fa-trash
            span= t('admin-whitelists-form.button.delete')
